<div class="container">
	<div class="profile">
		<h2>My Profile
			<a id="tooltip" data-toggle="tooltip" data-original-title="<p>This is what is displayed to users when you share your profile</p>">
            	<i class="fa fa-info-circle"></i>
        	</a>
        </h2>
		<% if @profile.image? %>
      	  <%= image_tag(@profile.image.thumb.url, alt: 'Image', :class => "profpic") %>
      	<% end %>
		<h3><%= @profile.user.first_name %> <%= @profile.user.last_name %></h3>
		<p>Email: <%= @profile.user.email %></p>
		<p>Location: <%= @profile.location %></p>
		<p>Skills: <%= @profile.skills %></p>
		<p>Bio: <%= @profile.bio %></p>
		<%= link_to "Edit Profile", edit_profile_path(@profile) %>
	</div>
</div>