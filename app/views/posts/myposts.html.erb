<div class="posts">
  <div class="container">
  	<h2>My Posts</h2>
  	<br>
    <% if @posts.empty? %>
  		<p>Looks like you haven't made any posts!</p>
  	<% else %>
	    <% @posts.each do |post|%> 
	      <div class="post">
					<h3><%= post.title %></h3> 
					<h4><%= post.category %></h4>
					<h4>By <%= post.user.first_name %> <%= post.user.last_name %></h4>
					<p>Location: <%= post.location %></p>
					<p>Description: <%= post.description %></p>
					<p>Looking for: <%= post.requirements %></p>
					<%= link_to "Edit Post", edit_post_path(post.id) %> 
					<%= link_to "Delete Post", post_path(post.id), method: "delete", data: {confirm: "Are you sure you want to delete this post? You will no longer be able to see profiles shared with you through it."} %> 
	      </div>
	      <br>
	    <% end %>
    <% end %>
  </div>
</div>