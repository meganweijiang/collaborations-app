<!DOCTYPE html>
<html>
  <head>
    <title>CollabFair</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>

  <div class="header">
    <div class="container">
      <div class="home-header"><h1><i class="fa fa-handshake-o"></i><%= link_to "CollabFair", root_path %></h1></div> 

      <nav class="navbar navbar-inverse bg-primary">
        <div class="container-fluid">
          <ul class="nav navbar-nav">
            <% if current_user %>
                  <li class="hello">Hello, <%= current_user.first_name %>!</li>
                  <li class="nav-link"><%= link_to "Log Out", logout_path, method: "delete" %></li>
                  <li class="nav-link"><%= link_to "My Profile", profile_path %></li>
                  <% if notification %>
                    <div class="blink_me"><li><i class="fa fa-envelope"></i> <%= link_to "New Profile Received!", sharedwithme_path %></li></div>
                  <% end %>
              <% else %>
                <li><%= link_to "Log In", login_path %></li>
                <li><%= link_to "Sign Up", signup_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>

      <ul class="navbar2">
        <% if current_user %>
          <li><%= link_to "View Posts", posts_path %></li>
          <li><%= link_to "My Posts", myposts_path %></li>
          <li><%= link_to "My Interests", myinterests_path %></li>
          <li><%= link_to "Profiles Received", sharedwithme_path %></li>
        <% end %>
      </ul>

    </div>
  </div>

  <%= yield %>
  <%= render "layouts/footer" %>
  </body>
</html>
