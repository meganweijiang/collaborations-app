<!DOCTYPE html>
<html>
  <head>
    <title>Collaborations</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="header">
    <div class="container">
      <h1><%= link_to "Collaborations", root_path %></h1> 

      <ul class="navbar navbar-inverse bg-primary">
        <% if current_user %>
            <li class="nav-item">Hello, <%= current_user.first_name %>!</li>
            <li class="nav-link"><%= link_to "Log Out", logout_path, method: "delete" %></li>
            <li class="nav-link"><%= link_to "My Profile", profile_path %></li>
            <% if notification %>
              <li class="nav-link"><%= link_to "New Profile Received!", sharedwithme_path %></li>
            <% end %>
          <% else %>
            <li class="nav-link"><%= link_to "Log In", login_path %></li>
            <li class="nav-link"><%= link_to "Sign Up", signup_path %></li>
        <% end %>
      </ul>

      <% if current_user %>
        <h2><%= link_to "View Posts", posts_path %></h2>
        <h3><%= link_to "My Posts", myposts_path %></h3>
        <h3><%= link_to "My Interests", myinterests_path %></h3>
        <h3><%= link_to "Profiles Received", sharedwithme_path %></h3>
      <% end %>

    </div>
  </div>

  <%= yield %>

  </body>
</html>
